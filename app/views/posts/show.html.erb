<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<hr/>
<%= link_to "Редактировать", edit_post_path(@post), :class => 'btn btn-warning' %>
<%= link_to "Удалить", post_path(@post), method: :delete,
    data: {confirm:"Удалить?"}, :class => 'btn btn-danger' %>

<h4> Комментарии </h4>
<hr/>
<% @post.comments.each do |comment| %>
  <div class="alert-alert-light">
    <p><strong><%= comment.username %></strong>
      <%= comment.body %>
    </p>
    <hr/>

  </div>
<% end %>

<br/>
<hr/>
<h5> Добавить комментарий </h5>

<%= form_for([@post, @post.comments.build]) do |f| %>

  <p>
    Пользователь <br>
    <%= f.text_field(:username, {:class => 'form-control'}) %>
  </p>
  <p>
    Текст комментария <br>
    <%= f.text_area(:body, {:class=>'form-control'}) %>
  </p>
  <p>
    <%= f.submit('Добавить комментарий', {:class=>'btn btn-warning'}) %>
  </p>
<%end %>